<!-- breakout.xml -->
<!-- XML Game Engine -->
<!-- author: beefviper -->
<!-- date: Sept 18, 2020 -->

<game xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="assets/xmlgameengine.xsd">
  <window name="Breakout" width="1280" height="720" background="color.black" fullscreen="false" framerate="60" />
  <variables>
    <variable name="margin" value="30" />
    <variable name="ball.radius" value="10" />
    <variable name="width" value="150" />
    <variable name="height" value="30" />
    <variable name="step" value="2" />
  </variables>
  <objects>
    <object name="ball">
      <sprite src="shape.circle(ball.radius)" />
      <position x="window.width.center - ball.radius" y="window.bottom - margin * 3" />
      <velocity x="random.range(-3,3)" y="random.range(-7,-5)" />
      <collision enabled="true" top="collide('bounce')" bottom="collide('bounce')" left="collide('bounce')" right="collide('bounce')" basic="collide('bounce')" />
    </object>
    <object name="player">
      <sprite src="shape.rectangle(width,height)" />
      <position x="window.width.center" y="window.bottom - height * 2" />
      <velocity x="0" y="0" />
      <collision enabled="true" left="collide('static')" right="collide('static')" basic="collide('static')"/>
      <actions>
        <action name="left" value="move.left(step)" />
        <action name="right" value="move.right(step)" />
      </actions>				
    </object>
    <object name="bricks">
      <sprite src="grid(7,5,shape.rectangle(width,height))" />
      <position x="margin" y="margin" />
      <velocity x="0" y="0" />
      <collision enabled="true" basic="collide('die')" />
    </object>
  </objects>	
  <states>
    <state name="mainmenu">
      <shows>
        <show object="player" />
      </shows>
      <inputs>
        <input action="state.playing" button="space" />
        <input action="state.settings" button="s" />
      </inputs>
    </state>
    <state name="settings">
      <shows>
        <show object="player" />
      </shows>
      <inputs>
        <input action="state.mainmenu" button="escape" />
      </inputs>
    </state>
    <state name="playing">
      <shows>
        <show object="ball" />
        <show object="player" />
        <show object="bricks" />
      </shows>
      <inputs>
        <input action="state.paused" button="space" />
        <input action="player.action.left" button="left" />
        <input action="player.action.right" button="right" />
      </inputs>
    </state>
    <state name="paused">
      <shows>
        <show object="player" />
      </shows>
      <inputs>
        <input action="state.playing" button="space" />
      </inputs>
    </state>
  </states>
</game>
