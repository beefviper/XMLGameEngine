<!-- pong.xml -->
<!-- XML Game Engine -->
<!-- author: beefviper -->
<!-- date: Sept 18, 2020 -->

<game>
  <!-- window -->
  <window name="Pong" width="1280" height="720" background="color.black" fullscreen="false" framerate="60" />
  <!-- variables -->
  <variables>
    <variable name="margin" value="30" />
    <variable name="text.size" value="256" />
    <variable name="logo.radius" value="100" />
    <variable name="ball.radius" value="10" />
    <variable name="width" value="30" />
    <variable name="height" value="150" />
    <variable name="step" value="2" />
  </variables>
  <!-- objects -->
  <objects>
    <!-- title -->
    <object name="title">
      <sprite src="text('PONG', text.size)" />
      <position x="window.width.center - 350" y="margin" />
      <velocity x="0" y="0" />
      <collision enabled="false" data="" />
    </object>
    <!-- logo -->
    <object name="logo">
      <sprite src="shape.circle(logo.radius)" />
      <position x="window.width.center - logo.radius" y="window.height.center - logo.radius" />
      <velocity x="0" y="0" />
      <collision enabled="false" data="" />
    </object>
    <!-- ball -->
    <object name="ball">
      <sprite src="shape.circle(ball.radius)" />
      <position x="window.width.center - ball.radius" y="window.height.center - ball.radius" />
      <velocity x="random.range(-7,7)" y="random.range(-3,3)" />
      <collision enabled="true" data="top: bounce; bottom: bounce; left: inc('score2'); right: inc('score1'); default: bounce"
                 top="bounce" bottom="bounce" left="inc('score2')" right="inc('score1')" default="bounce" />
    </object>
    <!-- paddle1 -->
    <object name="paddle1">
      <sprite src="shape.rectangle(width,height)" />
      <position x="window.left + margin" y="window.height.center - height / 2" />
      <velocity x="0" y="0" />
      <collision enabled="true" data="top: static; bottom: static" top="static" bottom="static" />
      <actions>
        <action name="up" value="move.up(step)" />
        <action name="down" value="move.down(step)" />
      </actions>				
    </object>
    <!-- paddle2 -->
    <object name="paddle2">
      <sprite src="shape.rectangle(width,height)" />
      <position x="window.right - margin - width" y="window.height.center - height / 2" />
      <velocity x="0" y="0" />
      <collision enabled="true" data="top: static; bottom: static" top="static" bottom="static" />
      <actions>
        <action name="up" value="move.up(step)" />
        <action name="down" value="move.down(step)" />
      </actions>				
    </object>
    <!-- score1 -->
    <object name="score1">
      <sprite src="text('0',128)" />
      <position x="window.width.center - 80" y="margin" />
      <velocity x="0" y="0" />
      <collision enabled="false" data="" />
    </object>
    <!-- score2 -->
    <object name="score2">
      <sprite src="text('0',128)" />
      <position x="window.width.center + 50" y="margin" />
      <velocity x="0" y="0" />
      <collision enabled="false" data="" />
    </object>
  </objects>
  <!-- states -->
  <states>
    <!-- mainmenu -->
    <state name="mainmenu">
      <show object="title" />
      <show object="logo" />
      <inputs>
        <input action="state.playing" button="space" />
        <input action="state.settings" button="s" />
      </inputs>
    </state>
    <!-- settings -->
    <state name="settings">
      <show object="logo" />
      <inputs>
        <input action="state.mainmenu" button="escape" />
      </inputs>
    </state>
    <!-- playing -->
    <state name="playing">
      <show object="ball" />
      <show object="paddle1" />
      <show object="paddle2" />
      <show object="score1" />
      <show object="score2" />
      <inputs>
        <input action="state.paused" button="space" />
        <input action="paddle1.action.up" button="q" />
        <input action="paddle1.action.down" button="z" />
        <input action="paddle2.action.up" button="up" />
        <input action="paddle2.action.down" button="down" />
      </inputs>
    </state>
    <!-- paused -->
    <state name="paused">
      <show object="logo" />
      <inputs>
        <input action="state.playing" button="space" />
      </inputs>
    </state>
  </states>
</game>
